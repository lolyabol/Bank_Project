{{!< main}}

<div class="bank-container">
  <div class="bank-header">
    <h1>Банковские услуги</h1>
    <div class="quick-balance">
      <p>Текущий баланс: <strong>{{user.account.balance}} ₽</strong></p>
    </div>
  </div>

  <div class="bank-sections">
    <!-- Секция переводов -->
    <section class="bank-section transfer-section">
      <h2>Перевод средств</h2>
      <form id="transferForm" class="bank-form">
        <div class="form-group">
          <label for="recipientAccount">Счет получателя</label>
          <input type="text" id="recipientAccount" required>
        </div>
        <div class="form-group">
          <label for="amount">Сумма (₽)</label>
          <input type="number" id="amount" min="1" required>
        </div>
        <div class="form-group">
          <label for="comment">Назначение платежа</label>
          <input type="text" id="comment">
        </div>
        <button type="submit" class="btn-bank">Перевести</button>
      </form>
    </section>

    <!-- Секция кредитов -->
    <section class="bank-section loan-section">
      <h2>Оформление кредита</h2>
      <form id="loanForm" class="bank-form">
        <div class="form-group">
          <label for="loanAmount">Сумма кредита (₽)</label>
          <input type="number" id="loanAmount" min="1000" required>
        </div>
        <div class="form-group">
          <label for="loanTerm">Срок (мес.)</label>
          <select id="loanTerm" required>
            <option value="12">12 месяцев</option>
            <option value="24">24 месяца</option>
            <option value="36">36 месяцев</option>
          </select>
        </div>
        <button type="submit" class="btn-bank">Оформить</button>
      </form>
    </section>

    <!-- История операций -->
    <section class="bank-section history-section">
      <h2>История операций</h2>
      <div class="transactions-list">
        {{#each transactions}}
          <div class="transaction {{type}}">
            <div class="transaction-info">
              <p class="transaction-description">{{description}}</p>
              <p class="transaction-date">{{formatDate createdAt}}</p>
            </div>
            <p class="transaction-amount">{{amount}} ₽</p>
          </div>
        {{else}}
          <p class="no-transactions">Операций пока нет</p>
        {{/each}}
      </div>
    </section>
  </div>
</div>