<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/styles/mainStyle.css">
</head>
<body class="mainBody">
    <header class="mainHeader">
        <div class="header-container">
            <h1 class="mainH1">Добро пожаловать в Гойда-банк!</h1>
            
            <div class="nav-container">
                <nav class="mainNav">
                    <ul>
                        <li><a href="/main/home">Домой</a></li>
                        <li><a href="/main/account">Профиль</a></li>
                        <li><a href="/main/transactions">Транзакции</a></li>
                        <li><a href="/main/saving-account">Сберегательный счёт</a></li>
                        <li><a href="/login" class="login-link">Выход</a></li>
                    </ul>
                </nav>                      
            </div>
            {{#if user}}
                <div class="user-info">
                    <a href="/main/account"><img src="{{user.avatarUrl}}" alt="Аватар" class="user-avatar" id="user-avatar"></a>
                    <span>{{user.name}}</span>
                </div>
                {{/if}}
                
        </div>
    </header>

    <main class="content">
        {{{body}}}
    </main>

    <footer>
        <p>&copy; 2023 Гойда-Банк. Все права защищены.</p>
    </footer>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const socket = io();
            const userAvatar = document.getElementById('user-avatar');
            
            if (userAvatar) {
                socket.on('connect', () => {
                    const userId = '{{user.id}}';
                    if (userId) socket.emit('join-user-room', userId);
                });

                socket.on('avatar-updated', (data) => {
                    userAvatar.classList.add('avatar-updating');
                    setTimeout(() => {
                        userAvatar.src = data.avatarUrl + '?' + Date.now();
                        userAvatar.classList.remove('avatar-updating');
                    }, 300);
                });
            }
        });
    </script>
</body>
</html>